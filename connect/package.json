{
  "name": "adb-manager",
  "version": "2.0.0",
  "description": "Devices Connect",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && electron .\"",
    "start:react": "cd src/frontend && npm run dev",
    "build": "npm run build:react && electron-builder",
    "build:all": "npm run build:react && electron-builder --win --linux",
    "build:win": "npm run build:react && electron-builder --win",
    "build:mac": "npm run build:react && electron-builder --mac",
    "build:linux": "npm run build:react && electron-builder --linux",
    "build:react": "cd src/frontend && npm run build",
    "electron": "electron ."
  },
  "author": "Dasun Illangasinghe",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1"
  },
  "dependencies": {
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "react-router-dom": "^7.6.1",
    "sqlite3": "^5.1.7",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.adbmanager.connect",
    "productName": "ADB Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      ".env",
      "src/frontend/dist/**/*",
      "src/backend/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "bin/",
        "to": "bin/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/frontend/public/logoNew.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "src/frontend/public/logoNew.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "src/frontend/public/logoNew.png",
      "category": "Development"
    }
  }
}
