<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Button Style with Glassmorphism -->
    <style name="GlassmorphismButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/emerald_gradient_start</item>
        <item name="cornerRadius">14dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/emerald_400</item>
        <item name="rippleColor">@color/emerald_300</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Custom Card Style -->
    <style name="GlassmorphismCard">
        <item name="cardBackgroundColor">@color/glass_card_bg</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">24dp</item>
    </style>

    <!-- Custom TextInput Style -->
    <style name="GlassmorphismTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/input_bg</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/emerald_400</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/emerald_300</item>
    </style>

    <!-- Title Text Style -->
    <style name="GlassmorphismTitle">
        <item name="android:textColor">@color/emerald_100</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Subtitle Text Style -->
    <style name="GlassmorphismSubtitle">
        <item name="android:textColor">@color/emerald_200</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Section Header Style -->
    <style name="GlassmorphismSectionHeader">
        <item name="android:textColor">@color/emerald_100</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Status Text Style -->
    <style name="GlassmorphismStatusText">
        <item name="android:textColor">@color/emerald_200</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>